{
  "id": "dasu",
  "title": "Daemon Summoner",
  "description": "The Daemon Summoner system for FoundryVTT!",
  "authors": [
    {
      "name": "Spyrella",
      "discord": "spyrella",
      "url": "https://github.com/spyrella/"
    }
  ],
  "relationships": {
    "requires": [
      {
        "id": "socketlib",
        "type": "module"
      }
    ]
  },
  "documentTypes": {
    "Actor": {
      "summoner": {
        "htmlFields": ["biography"]
      },
      "daemon": {
        "htmlFields": ["biography"]
      }
    },
    "Item": {
      "ability": {
        "htmlFields": ["description"]
      },
      "item": {
        "htmlFields": ["description"]
      },
      "weapon": {
        "htmlFields": ["description"]
      },
      "tag": {
        "htmlFields": ["description"]
      },
      "tactic": {
        "htmlFields": ["description"]
      },
      "special": {
        "htmlFields": ["description"]
      },
      "scar": {
        "htmlFields": ["description"]
      },
      "schema": {
        "htmlFields": ["description"]
      },
      "feature": {
        "htmlFields": ["description"]
      },
      "class": {
        "htmlFields": ["description"]
      },
      "archetype": {
        "htmlFields": ["description"]
      },
      "subtype": {
        "htmlFields": ["description"]
      },
      "role": {
        "htmlFields": ["description"]
      }
    }
  },
  "flags": {
    "hotReload": {
      "extensions": ["css", "html", "hbs", "json"],
      "paths": ["css", "lang", "templates"]
    }
  },
  "url": "#{URL}#",
  "license": "LICENSE.txt",
  "readme": "README.md",
  "bugs": "#{{URL}}#/issues",
  "changelog": "CHANGELOG.md",
  "media": [
    {
      "type": "setup",
      "url": "systems/dasu/assets/anvil-impact.png",
      "thumbnail": "systems/dasu/assets/anvil-impact.png"
    }
  ],
  "version": "#{VERSION}#",
  "compatibility": {
    "minimum": "13",
    "verified": "13",
    "maximum": "13"
  },
  "esmodules": ["module/dasu.mjs"],
  "styles": ["css/dasu.css"],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "packs": [
    {
      "label": "Archetypes",
      "type": "Item",
      "name": "archetypes",
      "path": "packs/archetypes",
      "system": "dasu",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    },
    {
      "label": "Subtypes",
      "type": "Item",
      "name": "subtypes",
      "path": "packs/subtypes",
      "system": "dasu",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    },
    {
      "label": "Roles",
      "type": "Item",
      "name": "roles",
      "path": "packs/roles",
      "system": "dasu",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    },
    {
      "label": "Handouts",
      "type": "JournalEntry",
      "name": "handouts",
      "path": "packs/handouts",
      "system": "dasu",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    }
  ],
  "packFolders": [
    {
      "name": "Daemon Creation",
      "sorting": "a",
      "color": "#276625",
      "packs": ["archetypes", "subtypes", "roles"]
    },
    {
      "name": "Summoner Creation",
      "sorting": "a",
      "color": "#276625",
      "packs": ["classes", "schemas"]
    }
  ],
  "socket": true,
  "manifest": "#{MANIFEST}#",
  "download": "#{DOWNLOAD}#",
  "background": "systems/dasu/assets/anvil-impact.png",
  "grid": {
    "type": 1,
    "distance": 5,
    "units": "ft",
    "diagonals": 0
  },
  "primaryTokenAttribute": "stats.hp",
  "secondaryTokenAttribute": "stats.wp"
}
