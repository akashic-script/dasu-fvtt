<form class="skill-manager-form">
  <div class="form-section">
    <div class="section-header">
      <h3>{{localize "DASU.SkillManager.EditSettings"}}</h3>
    </div>

    <div class="form-group">
      <label for="skill-mod">{{localize "DASU.SkillManager.Modifier"}}</label>
      <input type="number"
             id="skill-mod"
             name="mod"
             value="{{skill.mod}}"
             data-dtype="Number"
             min="-10"
             max="10"
             step="1" />
      <p class="hint">{{localize "DASU.SkillManager.ModifierHint"}}</p>
    </div>

    <div class="form-group">
      <label for="skill-specialties">{{localize "DASU.SkillManager.Specialties"}}</label>
      <input type="text"
             id="skill-specialties"
             name="specialties"
             value="{{skill.specialties}}"
             placeholder="{{localize "DASU.SkillManager.SpecialtiesPlaceholder"}}" />
      <p class="hint">{{localize "DASU.SkillManager.SpecialtiesHint"}}</p>
    </div>
  </div>
</form>
