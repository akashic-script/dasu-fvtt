{{! Special Attributes Tab }}
<section class='tab attributes-special scrollable {{tab.cssClass}}' data-group='primary' data-tab='attributes'>
  <div class='section-header'>
    <h3>{{localize 'DASU.Item.Special.FIELDS.description.label'}}</h3>
    <p class='section-description'>Describe the special item's effects and properties.</p>
  </div>

  {{#if editable}}
    <prose-mirror name="system.description" data-document-uuid="{{item.uuid}}" value="{{system.description}}" collaborate="true" toggled="true">
      {{{enrichedDescription}}}
    </prose-mirror>
  {{else}}
    {{{enrichedDescription}}}
  {{/if}}
</section> 