{{! Schema Attributes Tab }}
<section class='tab attributes-schema scrollable {{tab.cssClass}}' data-group='primary' data-tab='attributes'>
  <fieldset>
    <legend>{{localize 'DASU.Description'}}</legend>
    {{formInput @root.htmlInputField value=system.description name="system.description" toggled=@root.editable enriched=enrichedDescription disabled=(not @root.editable)}}
  </fieldset>

  <div class='separator'></div>
  <div class="schema-level-header" style="margin-bottom: 1em;">
    <label for="system.level"><strong>{{localize 'DASU.Item.Schema.FIELDS.level.label'}}:</strong></label>
    <input type="number" name="system.level" id="system.level" value="{{system.level}}" min="1" max="3" style="width: 3em; text-align: center;" data-dtype="Number" />
    <span>/ 3</span>
  </div>
  <h3>{{localize 'DASU.Item.Schema.progression.title'}}</h3>
  <table class="schema-level-table">
    <thead>
      <tr>
        <th>{{localize 'DASU.Item.Schema.progression.level'}}</th>
        <th>{{localize 'DASU.Item.Schema.progression.description'}}</th>
      </tr>
    </thead>
    <tbody>
      <tr class="{{#if (gte system.level 1)}}active{{else}}inactive{{/if}}">
        <td>1</td>
        <td>
          <input type="text" name="system.level1.description" value="{{system.level1.description}}" placeholder="{{localize 'DASU.Item.Schema.progression.placeholder.level1'}}" />
        </td>
      </tr>
      <tr class="{{#if (gte system.level 2)}}active{{else}}inactive{{/if}}">
        <td>2</td>
        <td>
          <input type="text" name="system.level2.description" value="{{system.level2.description}}" placeholder="{{localize 'DASU.Item.Schema.progression.placeholder.level2'}}" />
        </td>
      </tr>
      <tr class="{{#if (gte system.level 3)}}active{{else}}inactive{{/if}}">
        <td>3</td>
        <td>
          <input type="text" name="system.level3.description" value="{{system.level3.description}}" placeholder="{{localize 'DASU.Item.Schema.progression.placeholder.level3'}}" />
        </td>
      </tr>
    </tbody>
  </table>
  <style>
    .schema-level-table tr.active { background: var(--color-bg-primary); }
    .schema-level-table tr.inactive { opacity: 0.5; }
    .schema-level-header { display: flex; align-items: center; gap: 0.5em; }
  </style>
</section> 