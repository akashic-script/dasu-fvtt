{{! Effects Tab }}
<section
  class='tab effects flexcol scrollable {{tab.cssClass}}'
  data-group='primary'
  data-tab='effects'
>
  <fieldset class="status-effects">
    <div class="status-header">
      <legend data-tooltip="{{localize 'DASU.Actor.StatusConditionsTooltip'}}" style="cursor: help;">{{localize "DASU.Actor.StatusConditions"}}</legend>
      <div class="status-actions">
        <button type="button" class="status-action-btn" data-action="clearTemporary" data-tooltip="{{localize 'DASU.Actor.StatusActions.ClearTemporary'}}">
          {{localize "DASU.Actor.StatusActions.ClearTemporary"}}
        </button>
        <button type="button" class="status-action-btn" data-action="clearAll" data-tooltip="{{localize 'DASU.Actor.StatusActions.ClearAll'}}">
          {{localize "DASU.Actor.StatusActions.ClearAll"}}
        </button>
      </div>
    </div>
    <div class="status-container">
      {{#each @root.statusConditions as |status id|}}
      <button type="button" class="status-control {{#if status.active}}active{{/if}}" data-status-id="{{id}}" data-tooltip="{{status.description}}" data-action="toggleStatus">
        <img src="{{status.img}}" alt="{{status.name}}">
        <span>{{status.name}}</span>
      </button>
      {{/each}}
    </div>
  </fieldset>
  <ol class='items-list'>
    {{#each effects as |section sid|}}
      <li
        class='item flexrow items-header'
        data-effect-type='{{section.type}}'
      >
        <div class='item-name flexrow'>
          {{localize section.label}}
        </div>
        <div class='effect-source'>
          {{localize 'DASU.Effect.Source'}}
        </div>
        <div class='effect-source'>{{localize 'DASU.Effect.Duration'}}</div>
        <div class='item-controls flexrow'>
          <a
            class='item-control effect-control'
            data-action='createDoc'
            data-document-class='ActiveEffect'
            data-origin="{{@root.actor.uuid}}"
            data-img="icons/svg/aura.svg"
            {{#if (eq section.type "inactive")}}
              data-disabled="true"
            {{else if (eq section.type "temporary")}}
              data-duration.rounds="1"
            {{/if}}
            data-tooltip='{{localize "DOCUMENT.Create" type="Effect"}}'
          >
            <i class='fas fa-plus'></i>
            {{localize 'DOCUMENT.New' type="Effect"}}
          </a>
        </div>
      </li>
      <div class='item-list effect-list'>
        {{#each section.effects as |effect|}}
          {{!-- Hide tag self-transfer effects: if effect is transfer:true, parent is tag, and actor owns the tag, skip --}}
          {{#unless (and effect.transfer (eq effect.parent.type "tag") (eq effect.parent.actor.id @root.actor.id))}}
          <li
            class='item effect flexrow draggable'
            data-effect-id='{{effect.id}}'
            data-parent-id='{{effect.parent.id}}'
            data-document-class='ActiveEffect'
          >
            <div class='item-name flexrow'>
              <div class='effect-image-container'>
                <a class='rollable' data-action='roll' data-roll-type='effect'>
                  <img class='effect-image' src='{{effect.img}}' height="24" width="24" data-tooltip='{{effect.name}}'/>
                </a>
              </div>
              <div>{{effect.name}}
                {{#if effect.stackCount}}
                  <span class='stack-indicator'> x{{effect.stackCount}}</span>
                {{/if}}
                {{#if effect.transfer}}
                  <i class="fas fa-share-square" style="color:#a3f" data-tooltip="{{localize 'DASU.Effect.TransferredFromItem'}}"></i>
                {{/if}}
              </div>
            </div>
            <div class='effect-source'>{{effect.sourceName}}</div>
            <div class='effect-duration'>{{#if effect.specialDurationLabel}}{{effect.specialDurationLabel}}{{else}}{{effect.duration.label}}{{/if}}</div>
            <div class='item-controls flexrow'>
              {{#if @root.editable}}
              <a
                class='item-control effect-control'
                data-action='toggleEffect'
                data-tooltip='{{localize "DASU.Effect.Toggle"}}'
              >
                <i class='fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}'></i>
              </a>
              {{/if}}
              <a
                class='item-control effect-control'
                data-action='viewDoc'
                data-tooltip='{{localize "DOCUMENT.Update" type="Effect"}}'
              >
                <i class='fas fa-edit'></i>
              </a>
              {{#if @root.editable}}
              <a
                class='item-control effect-control'
                data-action='deleteDoc'
                data-tooltip='{{localize "DOCUMENT.Delete" type="Effect"}}'
              >
                <i class='fas fa-trash'></i>
              </a>
              {{/if}}
            </div>
          </li>
          {{/unless}}
        {{/each}}
      </div>
    {{/each}}
  </ol>
</section>