{{!-- DASU Attribute/Skill Check Chat Message Template - Compact --}}
<div class="dasu check-card {{check.checkType}} {{resultClass}}" data-actor-id="{{check.actor.id}}">
  
  {{!-- Compact Header --}}
  <header class="check-header">
    <div class="check-title">
      <img class="actor-image" src="{{check.actor.img}}" alt="{{check.actor.name}}" />
      <div class="title-info">
        <h3 class="check-name">{{check.label}}</h3>
      </div>
    </div>
  </header>

  {{!-- Compact Dice Display --}}
  <div class="dice-container">
    {{#each check.results.rollResults}}
      <div class="die {{#if (gte this 4)}}success{{else}}failure{{/if}}">{{this}}</div>
    {{/each}}
  </div>
  
  {{!-- Pool breakdown in one line --}}
  <div class="pool-breakdown">
    {{#if isSkillCheck}}
      <span class="skill-part">{{check.skillName}}: {{check.skillDice}}d6</span>
      <span class="attr-part">{{upper check.attributeName}}: {{check.attributeDice}}d6</span>
    {{else}}
      {{#if check.primaryAttribute}}
        {{#if check.secondaryAttribute}}
          <span class="attr-part">{{check.primaryAttribute.label}}: {{check.primaryAttribute.dice}}d6</span>
          <span class="attr-part">{{check.secondaryAttribute.label}}: {{check.secondaryAttribute.dice}}d6</span>
        {{else}}
          <span class="attr-part">{{upper check.attributeName}}: {{check.totalDice}}d6</span>
        {{/if}}
      {{else}}
        <span class="attr-part">{{upper check.attributeName}}: {{check.totalDice}}d6</span>
      {{/if}}
    {{/if}}
    {{#if (neq check.diceMod 0)}}
      <span class="mod-part">{{#if (gt check.diceMod 0)}}+{{/if}}{{check.diceMod}} {{localize 'DASU.Modifier'}}</span>
    {{/if}}
  </div>

  {{!-- Compact outcome with success badge and crit indicator --}}
  <div class="outcome-compact {{successLevel}}">
    <div class="success-count-badge {{resultClass}}">
      <span class="count">{{check.results.successes}}</span>
      <span class="icon">{{#if hasSuccesses}}<i class="fas fa-check"></i>{{else}}<i class="fas fa-times"></i>{{/if}}</span>
    </div>
    {{#if hasCrit}}
      <div class="crit-indicator">
        <span class="crit-icon"><i class="fas fa-star"></i></span>
        <span class="crit-text">{{localize 'DASU.Crit'}}</span>
      </div>
    {{/if}}
  </div>
</div>

